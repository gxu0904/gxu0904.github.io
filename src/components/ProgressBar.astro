<!-- Progress bar -->
<div id="scroll-progress" class="fixed top-0 left-0 right-0 h-1 bg-transparent z-50 pointer-events-none">
  <div id="progress-bar" class="h-full bg-gradient-to-r from-[var(--primary)] via-[var(--accent)] to-[var(--primary)] bg-[length:200%_100%] transition-all duration-100" style="width: 0%; animation: gradient-flow 3s ease infinite;"></div>
</div>

<style>
  @keyframes gradient-flow {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }
</style>

<script>
  // Update progress bar on scroll
  function updateProgressBar() {
    const scrollTop = window.scrollY;
    const docHeight = document.documentElement.scrollHeight - window.innerHeight;
    const scrollPercent = (scrollTop / docHeight) * 100;

    const progressBar = document.getElementById('progress-bar');
    if (progressBar) {
      progressBar.style.width = `${scrollPercent}%`;
    }
  }

  window.addEventListener('scroll', updateProgressBar, { passive: true });
  window.addEventListener('resize', updateProgressBar, { passive: true });

  // Initial update
  updateProgressBar();
</script>
