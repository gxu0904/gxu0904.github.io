---
import { person } from '../../data/person';
---

<section id="about" class="py-32 relative overflow-hidden">
  <!-- Background elements -->
  <div class="absolute top-0 right-0 w-96 h-96 bg-gradient-to-bl from-[var(--primary)]/10 to-transparent blur-3xl" data-parallax data-speed="0.3"></div>

  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <h2 class="text-4xl md:text-5xl font-display font-bold mb-12" data-animate data-text-reveal>
      About
    </h2>

    <!-- Bio with stagger animation -->
    <div class="space-y-6 text-lg text-[var(--muted)] leading-relaxed mb-16" data-animate>
      <p style="will-change: transform, opacity;">{person.bio}</p>
    </div>

    <!-- Skills with animated cards -->
    <div class="mb-16" data-animate>
      <h3 class="text-xl font-semibold mb-6 text-[var(--fg)]" data-animate>Skills</h3>
      <div class="space-y-4">
        {Object.entries(person.skills).map(([category, skills], index) => (
          <div
            class="group p-4 rounded-lg border border-[var(--graphite)]/30 hover:border-[var(--primary)]/50 transition-all duration-300"
            data-scale
            data-hover-lift
            style={`transition-delay: ${index * 0.1}s; will-change: transform;`}
          >
            <span class="text-sm text-[var(--muted)] font-medium">{category}:</span>
            <span class="text-sm text-[var(--fg)] ml-2">{skills.join(', ')}</span>
          </div>
        ))}
      </div>
    </div>

    <!-- Timeline with animated entries -->
    <div data-animate>
      <h3 class="text-xl font-semibold mb-6 text-[var(--fg)]" data-animate>Timeline</h3>
      <div class="space-y-4 relative">
        <!-- Vertical line -->
        <div class="absolute left-[30px] top-0 bottom-0 w-px bg-gradient-to-b from-[var(--primary)]/50 to-transparent"></div>

        {person.timeline.map((item, index) => (
          <div
            class="flex gap-8 items-baseline group relative"
            data-scale
            style={`transition-delay: ${index * 0.1}s; will-change: transform, opacity;`}
          >
            <span class="text-sm font-mono text-[var(--primary)] w-16 flex-shrink-0 relative">
              <span class="inline-block group-hover:scale-110 transition-transform duration-300">{item.year}</span>
              <div class="absolute left-[60px] top-1/2 w-2 h-2 rounded-full bg-[var(--primary)] -translate-y-1/2"></div>
            </span>
            <span class="text-[var(--muted)] group-hover:text-[var(--fg)] transition-colors duration-300 pl-4">{item.event}</span>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
