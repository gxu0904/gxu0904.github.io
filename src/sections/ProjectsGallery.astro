---
import projectsData from '../../data/projects.json';

const projects = projectsData.slice(0, 6); // Show first 6 projects
---

<section id="projects" class="relative py-40 overflow-hidden" data-gradient-mesh data-floating-shapes data-shape-count="6">
  <!-- Animated background with parallax -->
  <div class="absolute top-1/4 right-1/4 w-[600px] h-[600px] bg-gradient-to-br from-[var(--accent)]/10 to-transparent blur-3xl rotate-slow" data-parallax data-speed="0.2"></div>
  <div class="absolute bottom-1/4 left-1/4 w-[500px] h-[500px] bg-gradient-to-tr from-[var(--primary)]/8 to-transparent blur-3xl float" data-parallax data-speed="0.25"></div>

  <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <!-- Section header with reveal animation -->
    <div class="mb-20" data-animate>
      <h2 class="text-5xl md:text-6xl lg:text-7xl font-display font-bold mb-6" data-text-reveal>
        Selected Work
      </h2>
      <p class="text-xl md:text-2xl text-[var(--muted)] max-w-2xl" data-char-reveal>
        A collection of projects that showcase my approach to solving complex problems
      </p>
    </div>

    <!-- Projects grid with stagger animations -->
    <div class="space-y-16">
      {projects.map((project, index) => (
        <div
          class="group relative perspective-1000"
          data-animate
          style={`animation-delay: ${index * 0.15}s;`}
        >
          <!-- 3D tilt card effect -->
          <div
            class="relative p-8 md:p-10 rounded-2xl bg-gradient-to-br from-white to-gray-50 shadow-lg hover:shadow-2xl transition-all duration-500 preserve-3d"
            data-tilt
            data-hover-lift
            style="will-change: transform; border: 1px solid rgba(30, 58, 95, 0.08);"
          >
            <!-- Gradient overlay on hover -->
            <div class="absolute inset-0 bg-gradient-to-r from-[var(--primary)]/5 via-transparent to-[var(--accent)]/5 opacity-0 group-hover:opacity-100 transition-opacity duration-700 rounded-2xl pointer-events-none"></div>

            <!-- Shimmer effect -->
            <div class="absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-500 rounded-2xl overflow-hidden pointer-events-none">
              <div class="shimmer absolute inset-0"></div>
            </div>

            <div class="relative z-10">
              <!-- Project header -->
              <div class="flex items-start justify-between gap-6 mb-6">
                <div class="flex-1">
                  <h3 class="text-3xl md:text-4xl font-display font-bold mb-3 group-hover:text-[var(--primary)] transition-colors duration-400">
                    {project.name}
                  </h3>
                  <p class="text-lg text-[var(--muted)] leading-relaxed group-hover:text-[var(--fg)] transition-colors duration-400">
                    {project.description}
                  </p>
                </div>
                <span class="text-lg font-mono text-[var(--muted)] whitespace-nowrap px-4 py-2 rounded-lg bg-[var(--primary)]/5 group-hover:bg-[var(--primary)]/10 group-hover:text-[var(--primary)] transition-all duration-300">
                  {project.year}
                </span>
              </div>

              <!-- Tech stack with animated tags -->
              <div class="flex gap-3 flex-wrap mb-6">
                {project.stack.slice(0, 6).map((tech, techIndex) => (
                  <span
                    class="text-sm px-4 py-2 rounded-full bg-[var(--graphite)]/40 text-[var(--muted)] font-medium hover-scale group-hover:bg-[var(--primary)]/10 group-hover:text-[var(--primary)] transition-all duration-400 cursor-default"
                    style={`transition-delay: ${techIndex * 0.05}s; will-change: transform;`}
                  >
                    {tech}
                  </span>
                ))}
                {project.stack.length > 6 && (
                  <span class="text-sm px-4 py-2 rounded-full bg-[var(--graphite)]/40 text-[var(--muted)] font-medium">
                    +{project.stack.length - 6} more
                  </span>
                )}
              </div>

              <!-- Project links with enhanced effects -->
              {(project.links.demo || project.links.repo) && (
                <div class="flex gap-5">
                  {project.links.demo && (
                    <a
                      href={project.links.demo}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="group/link inline-flex items-center gap-2 px-6 py-3 bg-[var(--primary)] text-white font-semibold rounded-lg hover-scale transition-all duration-300"
                      data-magnetic
                      data-magnetic-strength="0.4"
                      style="will-change: transform;"
                    >
                      <span>View Project</span>
                      <svg class="w-5 h-5 transform group-hover/link:translate-x-1 group-hover/link:-translate-y-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                      </svg>
                    </a>
                  )}
                  {project.links.repo && (
                    <a
                      href={project.links.repo}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="group/link inline-flex items-center gap-2 px-6 py-3 glass-morphism text-[var(--primary)] font-semibold rounded-lg hover-scale transition-all duration-300"
                      data-magnetic
                      data-magnetic-strength="0.4"
                      style="will-change: transform; border: 1px solid rgba(30, 58, 95, 0.15);"
                    >
                      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                      </svg>
                      <span>View Code</span>
                    </a>
                  )}
                </div>
              )}
            </div>

            <!-- Decorative corner accent -->
            <div class="absolute top-0 right-0 w-32 h-32 bg-gradient-to-br from-[var(--primary)]/10 to-transparent rounded-tr-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none"></div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
